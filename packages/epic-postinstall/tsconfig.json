{
  "extends": "@repo/typescript-config/node-esm-esbuild.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}