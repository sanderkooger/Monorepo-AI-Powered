{
  "name": "epic-postinstall",
  "version": "0.0.1",
  "description": "A utility package for post-installation and cleanup scripts.",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist node_modules",
    "postinstall": "echo \"postinstall goes here\" && exit 0",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint . --ext .ts",
    "start": "node dist/index.js",
    "run": "node dist/index.js",
    "uninstall": "node dist/index.js --uninstall"
  },
  "bin": {
    "epic-postinstall": "./dist/index.js"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@types/node": "^22.15.29",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}