{
  "name": "epic-postinstall",
  "version": "0.0.1",
  "description": "A utility package for post-installation and cleanup scripts.",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "rimraf dist node_modules .turbo",
    "postinstall": "echo \"postinstall goes here\" && exit 0",
    "build": "tsc ",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "run": "node dist/index.js",
    "uninstall": "node dist/index.js --uninstall",
    "lint": "eslint . --ext .ts --max-warnings 0"
  },
  "bin": {
    "epic-postinstall": "./dist/index.js"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@types/node": "^22.15.29",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "eslint": "^9.28.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1"
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0"
  }
}