{
  "name": "epic-postinstall",
  "version": "0.0.1",
  "description": "A utility package for post-installation and cleanup scripts.",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/src/index.mjs"
      }
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm build",
    "clean": "rimraf dist node_modules .turbo",
    "build": "tsc && tsc-alias",
    "start": "node dist/src/index.js",
    "dev": "nodemon --watch src --ext ts --exec 'pnpm run build && pnpm start'",
    "uninstall": "node dist/src/index.js --uninstall",
    "lint": "eslint . --ext .ts --max-warnings 0"
  },
  "bin": {
    "epic-postinstall": "./dist/src/index.js"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "concurrently": "^9.1.2",
    "cosmiconfig": "^9.0.0",
    "eslint": "^9.28.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cheerio": "^1.0.0"
  }
}
