{
  "name": "epic-postinstall",
  "version": "0.0.1",
  "description": "A utility package for post-installation and cleanup scripts.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist node_modules",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "start": "node dist/index.js",
    "run": "node dist/index.js",
    "uninstall": "node dist/index.js --uninstall"
  },
  "bin": {
    "epic-postinstall": "dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^22.15.24",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}