{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./root.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,

    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true
  }
}
