{
  "author": "sanderkooger",
  "license": "MIT",
  "name": "Monorepo-AI-Powered",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "epic-postinstall --splash",
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:infra": "turbo run lint:infra",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "dev-init": "./scripts/setup-dev-env.sh",
    "clean": "epic-postinstall --uninstall && rimraf .turbo node_modules"
    
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912",
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@commitlint/types": "^19.8.1",
    "conventional-changelog-atom": "^5.0.0"
  },
  "devDependencies": {
    "@repo/epic-postinstall": "workspace:*",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@repo/prettier-config": "workspace:*",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  }
}
