{
  "name": "@monorepo/ansible",
  "version": "0.1.0",
  "description": "Ansible environment management package",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm python:install",
    "lint": "ansible-lint",
    "clean": "rimraf .venv node_modules roles/galaxy .ansible .turbo",
    "python:install": "./setup-venv.sh",
    "configure": "ansible-playbook -i inventories/dynamic_inventory.py playbooks/site.yml",
    "deploy-infra-configure": "npm run configure"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "rimraf": "^6.0.1"
  }
}
