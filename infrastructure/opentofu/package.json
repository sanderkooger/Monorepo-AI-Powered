{
  "name": "opentofu",
  "scripts": {
    "postinstall": "tofu init -reconfigure",
    "lint": "pnpm npm-run-all lint:tflint",
    "lint:validate":"tofu validate",
    "lint:tflint": "tflint --recursive --color --minimum-failure-severity='error'",
    "lint:tflint:fix": "tflint --fix --recursive --color --minimum-failure-severity='error'",
    "lint:checkov": "checkov --directory . --config-file .checkov.yaml",
    "build": "pnpm plan",
    "clean": "rimraf .terraform node_modules .turbo",
    "plan": "tofu plan",
    "apply": "tofu apply -auto-approve -var=\"vault_addr=${VAULT_ADDR}\" -var=\"env_name=${ENV_NAME}\"",
    "deploy-infra-provision": "npm run apply"
  },
  "dependencies": {},
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  }
}
