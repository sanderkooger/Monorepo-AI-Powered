{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "dependsOn": ["^clean"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", ".terraform/**", ".ansible/**"],
      "env": [
        "ENV_NAME",
        "PROXMOX_NODE_NAME",
        "VAULT_ADDR",
        "VAULT_TOKEN",
        "TF_VAR_*",
        "NEXT_PUBLIC_*"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "deploy-infra-provision": {
      "outputs": []
    },
    "deploy-infra-configure": {
      "dependsOn": ["deploy-infra-provision"],
      "outputs": []
    },
    "infra-deploy": {
      "dependsOn": ["deploy-infra-provision", "deploy-infra-configure"],
      "outputs": []
    },
    "deploy-docs": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
